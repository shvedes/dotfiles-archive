#!/bin/bash

function get_volume {
    volume=$(pactl get-sink-volume @DEFAULT_SINK@ | grep -P -o "\d{1,3}%" | sed '2d' | cut -d '%' -f 1)
    echo $volume
}

function is_mute {
    mute=$(pactl get-sink-mute @DEFAULT_SINK@ | sed 's/Mute: //')
    echo $mute
}

function send_notification {
    soundHigh="  "
    soundMute="  "
    volume=$(get_volume)
    bar=$(seq --separator="─" 0 "$((volume / 5))" | sed 's/[0-9]//g')
    status=$(is_mute)

    if [ $status == "yes" ]; then
        dunstify -r 999 -u normal "$soundMute $bar"
    else
        if [ $volume = 0 ]; then
            dunstify -r 999 -u normal "$soundMute"
        else
            dunstify -r 999 -u normal "$soundHigh $bar"
        fi
    fi
}

case $1 in 
    up)
        pactl set-sink-volume @DEFAULT_SINK@ +5%
        send_notification
        ;;
    down)
        pactl set-sink-volume @DEFAULT_SINK@ -5% 
        send_notification
        ;;
    mute)
        pactl set-sink-mute @DEFAULT_SINK@ toggle
        send_notification
        ;;
esac
