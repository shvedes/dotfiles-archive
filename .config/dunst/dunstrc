[global]

# Monitor on which notifications will be displayed
# 0 means notifications will be displayed on all monitors
monitor = 0

# Font to use for notification text
font = Monoscape 12

# Width of the frame surrounding the notification
frame_width = 1

# Transparency of notifications
# 0 means notifications will be fully opaque
transparency = 0

# Inner padding of notifications (distance between notification text and notification border)
padding = 4

# Horizontal padding of notifications (distance between notification text and sides of the notification)
horizontal_padding = 4

# Origin of the notification window (top-right, bottom-right, etc.)
origin = top-right

# Offset of the notification window from the origin
offset = 17x42

# Width of the notification window
width = 400

# Height of the notification window
height = 400

# Height of the separator between notifications
separator_height = 4

# Whether to indicate hidden notifications (if the notification queue is full)
indicate_hidden = false

# Gap size between notifications
gap_size = 5

# Color of the separator between notifications
separator_color = foreground

# Corner radius of the notification window
corner_radius = 0

# Icon theme to use for notification icons
icon_theme = Stylish

# Position of the icon in relation to the notification text
# Options: left, right
icon_position = left

# Minimum size for notification icons
min_icon_size = 64

# Maximum size for notification icons
max_icon_size = 64

# Padding between notification text and icon
text_icon_padding = 15

# Whether to show progress bars in notifications
progress_bar = true

# Height of the progress bar in notifications
progress_bar_height = 10

# Width of the frame surrounding the progress bar in notifications
progress_bar_frame_width = 1

# Minimum width of the progress bar in notifications
progress_bar_min_width = 150

# Maximum width of the progress bar in notifications
progress_bar_max_width = 300

# Whether to sort notifications by timestamp
sort = yes

# Line height of notification text
line_height = 2

# Markup format for notification text
# full means all tags will be parsed
# no means no tags will be parsed
markup = full

# Format of the notification text
# %s is replaced with the notification summary
# %b is replaced with the notification body
format = "<b>%s</b>\n%b"

# Alignment of the notification text
# Options: left, center, right
alignment = left

# Timeout for notifications (in seconds)
timeout = 3

# Vertical alignment of the notification text
# Options: top, center, bottom
vertical_alignment = center

# Ellipsization of notification text
# Options: start, middle, end
ellipsize = end

# Whether to ignore newline characters in notification text
ignore_newline = no

# Whether to stack duplicate notifications
stack_duplicates = false

# Whether to show notification indicators (e.g. app icons)
show_indicators = false

# Browser to use for opening URLs in notifications
browser = /usr/bin/firefox

# Title of the notification window
title = Dunst

# Class of the notification window
class = dunst

# Actions to take on left mouse click
# Options: open_url, close_current, do_action
mouse_left_click = open_url, close_current, do_action

# Action to take on right mouse click
# Options: close_all
mouse_right_click = close_all


